<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card border-light bg-light rounded">
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="field form-group">
            <%= form.label :name %>
            <%= form.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field form-group">
            <%= form.label :surname %>
            <%= form.text_field :surname, class: 'form-control' %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field form-group">
            <%= form.label :document %>
            <%= form.text_field :document, class: 'form-control', 'data-inputmask': "'mask': '999.999.999-99'" %>
          </div>
        </div>

        <div class="col-12 col-md-6">
          <div class="field form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone, class: 'form-control', 'data-inputmask': "'mask': '(99) 99999-9999'" %>
          </div>
        </div>

        <div class="col-12">
          <div class="field form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control' %>
          </div>                  
        </div>
      </div>

      <h4 class="text-secondary mt-4 mb-3">Select subsidiaries</h4>

      <div class="row">
        <%= form.collection_check_boxes :subsidiary_ids, Subsidiary.all, :id, :name do |elem| %>
          <div class="col-12 col-md-6">
            <div class="checkbox-inline form-group ml-4">
              <%= elem.check_box class: 'form-check-input' %>
              <%= elem.label class: 'form-check-label' %>
            </div>
          </div>
        <% end %>
      </div>    

      <div class="actions d-flex pt-2">
        <%= form.submit submit_btn_text, class: 'btn btn-primary ml-auto' %>
      </div>
    </div>
  </div>
<% end %>
