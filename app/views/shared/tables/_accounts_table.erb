<div class="table-responsive rounded">
  <% if !accounts.empty? %>
    <table class="table table-dark rounded mb-0">
      <thead>
        <tr>
          <th>Number</th>
          <th>Balance</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% accounts.each do |account| %>
          <tr>
            <td><%= account.number %></td>
            <td><%= account.balance %></td>
            <td class="text-right">
              <div class="d-flex flex-row justify-content-end">
                <%= link_to account, class: 'mr-3' do %>
                  <i class="fas fa-plus text-primary" data-toggle="tooltip" data-placement="bottom" title="Details"></i>
                <% end %>

                <%= link_to edit_account_path(account), class: 'mr-3' do %>
                  <i class="fas fa-pen text-primary" data-toggle="tooltip" data-placement="bottom" title="Edit"></i>
                <% end %>

                <%= link_to account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mr-3' do %>
                  <i class="fas fa-trash text-danger" data-toggle="tooltip" data-placement="bottom" title="Delete"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-dark" role="alert">
      No accounts
    </div>
  <% end %>
</div>