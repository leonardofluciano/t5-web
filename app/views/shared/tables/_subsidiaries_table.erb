<div class="table-responsive rounded">
  <% if !subsidiaries.empty? %>
    <table class="table table-dark mb-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Legal name</th>
          <th>Document</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% subsidiaries.each do |subsidiary| %>
          <tr>
            <td><%= subsidiary.name %></td>
            <td><%= subsidiary.legal_name %></td>
            <td><%= subsidiary.document %></td>
            <td class="text-right">
              <div class="d-flex flex-row justify-content-end">
                <%= link_to subsidiary, class: 'mr-3' do %>
                  <i class="fas fa-plus text-primary" data-toggle="tooltip" data-placement="bottom" title="Details"></i>
                <% end %>

                <%= link_to edit_subsidiary_path(subsidiary), class: 'mr-3' do %>
                  <i class="fas fa-pen text-primary" data-toggle="tooltip" data-placement="bottom" title="Edit"></i>
                <% end %>

                <%= link_to subsidiary, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mr-3' do %>
                  <i class="fas fa-trash text-danger" data-toggle="tooltip" data-placement="bottom" title="Delete"></i>
                <% end %>
              </td>
            </div>  
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-dark" role="alert">
      No subsidiaries
    </div>
  <% end %>
</div>