<div class="row mt-5 pt-5">
    <div class="col-0 col-lg-1"></div>

    <div class="col-12 col-lg-10">
        <div class="row">
            <div class="col-12 col-md-6 p-1">
                <%= link_to companies_path do %>
                    <div class="card rounded">
                        <div class="card-body py-5">
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center text-secondary">
                                    Companies
                                </div>

                                <div class="col-12 d-flex justify-content-center mt-4 text-secondary">
                                    <i class="fas fa-building fa-lg"></i>                    
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>

            <div class="col-12 col-md-6 p-1">
                <%= link_to subsidiaries_path do %>
                    <div class="card rounded">
                        <div class="card-body py-5">
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center text-secondary">
                                    Subsidiaries
                                </div>

                                <div class="col-12 d-flex justify-content-center mt-4 text-secondary">
                                    <i class="fas fa-store fa-lg"></i>                    
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>

            <div class="col-12 col-md-6 p-1">
                <%= link_to customers_path do %>
                    <div class="card rounded">
                        <div class="card-body py-5">
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center text-secondary">
                                    Customers
                                </div>

                                <div class="col-12 d-flex justify-content-center mt-4 text-secondary">
                                    <i class="fas fa-users fa-lg"></i>                    
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>

            <div class="col-12 col-md-6 p-1">
                <%= link_to accounts_path do %>
                    <div class="card rounded">
                        <div class="card-body py-5">
                            <div class="row">
                                <div class="col-12 d-flex justify-content-center text-secondary">
                                    Accounts
                                </div>

                                <div class="col-12 d-flex justify-content-center mt-4 text-secondary">
                                    <i class="fas fa-credit-card fa-lg"></i>                    
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-0 col-lg-1"></div>
</div>
