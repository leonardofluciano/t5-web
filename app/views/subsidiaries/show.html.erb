<p id="notice"><%= notice %></p>

<div class="d-flex flex-column flex-md-row mt-5 mb-2">
  <h1 class="text-primary web-font-family-montserrat">Subsidiary</h1>
  <%= link_to 'Edit subsidiary', edit_subsidiary_path(@subsidiary), class: 'btn btn-success mt-4 mt-md-2 mb-2 ml-md-auto' %>
</div>

<div class="card border-light bg-light rounded">
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-md-4 col-lg-3 pr-5 pb-3 pb-md-0 web-border-bottom web-border-md-bottom-0 web-border-md-right">
        <h4 class="text-secondary mb-3">Details</h4>  
        
        <p>
          <strong>Name:</strong>
          <%= @subsidiary.name %>
        </p>

        <p>
          <strong>Legal name:</strong>
          <%= @subsidiary.legal_name %>
        </p>

        <p>
          <strong>Document:</strong>
          <%= @subsidiary.document %>
        </p>
      </div>

      <div class="col-12 col-md-8 col-lg-9 px-md-5">
        <h4 class="text-secondary mt-4 mt-md-0 mb-3">Company</h4>

        <%= render 'shared/tables/companies_table', companies: [ @subsidiary.company ] %>

        <h4 class="text-secondary mt-5 mb-3">Customers</h4>
        
        <% if @subsidiary.customers.exists? %>
          <%= render 'shared/tables/customers_table', customers: @subsidiary.customers %>
        <% else %>
          <div class="alert alert-dark" role="alert">
            There are no customers
          </div>
        <% end %>
      </div>
    </div>
  <div>
</div>